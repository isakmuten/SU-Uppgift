<Window x:Class="IoT_Simulation.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:IoT_Simulation"
        mc:Ignorable="d"
        Title="Settings" Height="200" Width="400">

    <Window.DataContext>
        <local:SettingsViewModel />
    </Window.DataContext>

    <Grid>

        <Label Content="Connection String:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Text="{Binding ConnectionString, Mode=TwoWay}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,10,0,0" Width="200"/>


        <Label Content="Device ID:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <TextBox Text="{Binding DeviceId, Mode=TwoWay}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,50,0,0" Width="200"/>


        <Button Content="Save" Width="80" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Command="{Binding SaveCommand}"/>
    </Grid>
</Window>
