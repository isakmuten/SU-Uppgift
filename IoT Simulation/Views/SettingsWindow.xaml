<Window x:Class="IoT_Simulation.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="200" Width="400">
    <Grid>
        <Label Content="Connection String:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox Name="ConnectionStringTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,10,0,0" Width="200"/>

        <Label Content="Device ID:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <TextBox Name="DeviceIdTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,50,0,0" Width="200"/>

        <Button Content="Save" Width="80" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Click="SaveButton_Click"/>
    </Grid>
</Window>
