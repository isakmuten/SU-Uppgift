<Window x:Class="IoT_Simulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="clr-namespace:IoT_Simulation.ViewModels"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Grid>
        <TextBlock Name="StatusTextBlock" Text="{Binding StatusText}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="16"/>

        <Slider Name="SpeedSlider" Minimum="0" Maximum="2" Value="{Binding FanSpeed, Mode=TwoWay}" TickFrequency="1" IsSnapToTickEnabled="True" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0"/>

        <Button Name="ToggleButton" Content="Turn On" Command="{Binding ToggleFanCommand}" Width="100" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Settings" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Command="{Binding OpenSettingsCommand}"/>
    </Grid>
</Window>